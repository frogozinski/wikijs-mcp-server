{
  "name": "@markus-michalski/wikijs-mcp-server",
  "version": "2.0.0",
  "description": "MCP Server for Wiki.js GraphQL API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "wikijs-mcp-server": "dist/index.js",
    "wikijs-mcp-http": "dist/http-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "bash scripts/start_http.sh",
    "stop": "bash scripts/stop_server.sh",
    "cleanup": "bash scripts/cleanup.sh",
    "update": "bash scripts/update.sh",
    "setup": "bash scripts/setup.sh",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "wikijs",
    "graphql",
    "documentation",
    "wiki",
    "model-context-protocol"
  ],
  "author": "Markus Michalski",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "scripts",
    ".env.example",
    "README.md",
    "LICENSE"
  ]
}
